<h1>Eat-Da-Burger!!</h1>

<ul>
    {{#each burgers}}
        {{#unless devour}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h3>Make-Da-Burger!!</h3>

<form class = "create-form">
    <div class = "form-class">
    <input type="text" id="makeBurger" name="makeBurger"></input>
    </div>
</form>